{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/main/public/**/*.ts",
    "src/main/public/**/*.tsx",
    "src/main/public/**/*.vue",
    "src/test/public/**/*.ts",
    "src/test/public/**/*.tsx", 
    "src/test/public/**/*.js" ],
  "exclude": [
    "node_modules",
    "target",
    "main/java"
  ]
}
